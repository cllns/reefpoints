.l-wrap--blog__filter
  %strong.filter__header= "#{pluralize(blog.articles.select { |article| article.author == authorname }.size, 'post')} by #{authorname}"

  .author__avatar-wrap
    - if current_path == 'authors/christopher-plummer.html'
      %img{src: "/images/team/default.jpg", class: 'author__avatar'}
    - else
      %img{src: "/images/team/#{authorname.parameterize}.jpg", class: 'author__avatar'}
    %p.author__bio= partial 'shared/' + authorname.parameterize<<'-bio'

  = partial 'articles', :locals => { :articles => page_articles }
