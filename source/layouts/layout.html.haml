    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0'}
    %meta{charset: 'utf-8'}
    - if current_page
      %meta{content: "DockYard.com - #{current_page.summary}", name: 'description'}
      - if current_page.data.googleplus
        %link{href: "https://plus.google.com/#{current_page.data.googleplus}", rel: 'author' }
      - if current_page.twitter
        %meta{name: 'twitter:creator', content: current_page.twitter}
        %meta{name: 'twitter:card', content: 'summary'}
        %meta{name: 'twitter:site', content: '@DockYard'}
        %meta{name: 'twitter:url', content: "http://reefpoints.dockyard.com/#{current_path}"}
        %meta{name: 'twitter:title', content: current_page.title}
        %meta{name: 'twitter:description', content: current_page.summary}
    - else
      %meta{content: 'DockYard is a web and mobile software development consultancy for hire based in Boston, MA', name: 'description'}

    %link{href: '//cloud.typography.com/6496052/702882/css/fonts.css', rel: 'stylesheet', type: 'text/css'}
    %link{href: 'http://dockyard.com/humans.txt', rel: 'author'}
    %link{href: '/favicon.png', rel: 'shortcut icon', type: 'image/x-icon'}
    %link{href: '/favicon.png', rel: 'icon', type: 'image/x-icon'}
    %link{rel: 'apple-touch-icon', :href => '/apple-touch-icon.png'}
    %link{rel: 'apple-touch-icon-precomposed', :href => '/apple-touch-icon-precomposed.png'}

