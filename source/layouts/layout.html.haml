!!!5
%html
  %head
    %title
      - if current_page.title
        = current_page.title
      - else
        DockYard

    = stylesheet_link_tag :all
    = javascript_include_tag :all

    %meta{'http-equiv' => 'CACHE-CONTROL', content: 'NO-CACHE'}
    %meta{content: 'DockYard is a Ruby on Rails, PostgreSQL, and, Ember.js, web / mobile application development software consultancy based in Boston, MA.', namer: 'description'}
